@model GyakolroWebApp.Models.DolgozoModel

@{
    ViewBag.Title = "Dolgozo felvitel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div><h2 style="text-align: center; background-color: red;">@ViewBag.Hiba</h2></div>
<h2>Új dolgozó felvitele</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DolgozoModel</legend>

        <div class="editor-label">        
            @Html.LabelFor(model => model.mHely) 
            <p>@ViewBag.mhely</p>           
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.mHely)            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dolgozoNev)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dolgozoNev)
            @Html.ValidationMessageFor(model => model.dolgozoNev)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <p>
            <input type="submit" value="Felvitel" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Vissza", "Index", "ListaModel")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
