@model GyakolroWebApp.Models.MunkahelyModel

@{
    ViewBag.Title = "Munkahely felvitele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div><h2 style="text-align: center; background-color: red;">@ViewBag.Hiba</h2></div>
<h2>Új munkahely felvitele</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MunkahelyModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.fkNev)
            <p>@ViewBag.mhely</p>  
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fkNev)
            @Html.ValidationMessageFor(model => model.fkNev)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.munkahelyNev)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.munkahelyNev)
            @Html.ValidationMessageFor(model => model.munkahelyNev)
        </div>

        <p>
            <input type="submit" value="Felvitel" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Vissza", "Index", "ListaModel")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
